<form action="/login" method="POST">
	<fieldset>
		<legend>Login:</legend>
		<label>Username
			<input
				type="text"
				required
				name="username"
				placeholder="username"
			/></label>
		<label>Password
			<input type="password" required name="password" />
		</label>
		<input type="submit" value="Log in" />
	</fieldset>
</form>